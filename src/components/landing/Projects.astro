---
// Define the array of projects directly in the frontmatter script.
const otherprojects = [
  {
    url: "https://trackker.astro-dev.tech/",
    title: "Trackker",
    description:
      "A comprehensive issue tracking application with real-time collaboration features for seamless team coordination.",
  },
  {
    url: "https://journally01.vercel.app/",
    title: "Journally",
    description:
      "A sleek and efficient journaling application to capture your thoughts, memories and reflections in a beautiful digital space.",
  },
  {
    url: "https://getalign.01shrvan.tech/",
    title: "Align Network",
    description:
      "A thought-based matchmaking platform targeting Gen Z and niche content creators with custom algorithms for connecting like-minded users.",
  },
  {
    url: "https://wandr-eight.vercel.app/",
    title: "Wandr",
    description:
      "A privacy-focused travel journaling application with advanced media integration and intuitive timeline visualization tools.",
  },
];

function calculateAosDuration(index) {
  return 1500 + index * 500; 
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <span>main</span>
        <span class="font-bold">projects</span>
      </h3>
    </div>

    <ul
      class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary lg:grid-cols-4 items-start gap-6 mt-32"
      role="list"
    >
      {
        otherprojects.map((project, index) => (
          <li
            class="flow-root h-full "
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(index)}
          >
            <a href={project.url}>
              <div class="h-full flex flex-col justify-between">
                <div>
                  <p class="group-hover:text-secondary/70 text-secondary text-9xl font-black lg:rotate-90 xl:-translate-x-32 lg:-translate-x-20 lg:mb-8 xl:mb-0  lg:pb-8">
                    0{index + 1}.
                  </p>
                  <p class="italic shrink-0">{project.title}</p>
                  <p class="text-3xl  mt-3 leading-6 indent-9">
                    {project.description}
                  </p>
                </div>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
