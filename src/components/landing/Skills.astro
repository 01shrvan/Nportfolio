---
// Define skill categories with their respective technologies
const skillCategories = [
  {
    category: "Frontend Development",
    skills: [
      { name: "HTML/CSS", proficiency: 90 },
      { name: "JavaScript", proficiency: 85 },
      { name: "React.js", proficiency: 80 },
      { name: "Next.js", proficiency: 75 },
      { name: "Tailwind CSS", proficiency: 95 },
    ],
  },
  {
    category: "UI/UX Design",
    skills: [
      { name: "Figma", proficiency: 85 },
      { name: "Adobe XD", proficiency: 75 },
      { name: "Wireframing", proficiency: 90 },
      { name: "Prototyping", proficiency: 85 },
      { name: "User Research", proficiency: 70 },
    ],
  },
  {
    category: "Tools & Technologies",
    skills: [
      { name: "Git/GitHub", proficiency: 80 },
      { name: "VS Code", proficiency: 90 },
      { name: "Responsive Design", proficiency: 95 },
      { name: "SASS/SCSS", proficiency: 85 },
      { name: "REST APIs", proficiency: 75 },
    ],
  },
  {
    category: "Additional Skills",
    skills: [
      { name: "Performance Optimization", proficiency: 80 },
      { name: "Cross-Browser Compatibility", proficiency: 85 },
      { name: "Accessibility", proficiency: 75 },
      { name: "SEO Basics", proficiency: 70 },
      { name: "Problem Solving", proficiency: 90 },
    ],
  },
];

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 200;
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <span>my</span>
        <span class="font-bold">skills &</span>
        <span class="italic">technologies</span>
      </h3>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mt-16 text-secondary">
      {
        skillCategories.map((category, catIndex) => (
          <div
            class="space-y-8"
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(catIndex)}
          >
            <h4 class="text-xl font-bold">{category.category}</h4>
            <div class="space-y-6">
              {category.skills.map((skill, skillIndex) => (
                <div class="space-y-2">
                  <div class="flex justify-between items-center">
                    <span class="text-sm">{skill.name}</span>
                    <span class="text-xs opacity-70">{skill.proficiency}%</span>
                  </div>
                  <div class="h-1 bg-secondary/30 overflow-hidden">
                    <div
                      class="h-full bg-secondary"
                      style={`width: ${skill.proficiency}%`}
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>

    <div
      class="mt-32 text-secondary"
      data-aos="fade-up"
      data-aos-duration="2000"
    >
      <div class="h-0.5 bg-secondary mb-8"></div>
      <p class="text-3xl leading-relaxed indent-32 lg:w-3/4">
        I'm constantly learning and expanding my skillset to deliver modern,
        efficient, and user-friendly web solutions that meet the evolving needs
        of clients and users.
      </p>
    </div>
  </div>
</section>
